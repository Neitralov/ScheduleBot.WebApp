<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - ScheduleBot</title>
    <link rel="icon" href="~/favicon.svg" type="image/x-icon">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
</head>
<body>
<div id="menu">
    <div id="header">
        <h1>Бот расписания</h1>
    </div>
    <div id="nav">
        <div id="top-nav">
            <a asp-page="StartBot">
                <div class="page-link"
                     @if (Context.Request.Path.ToString().Contains("/StartBot") || Context.Request.Path == "/")
                     {
                         @:id="currentPage" 
                     }>
                    <div class="page-link-container">
                        <img width="28px" height="28px" src="~/icons/play.svg" alt="Тут иконка"/>
                        <p>Управление ботом</p>
                    </div>
                </div>
            </a>
            <a asp-page="Statistics">
                <div class="page-link"
                     @if (Context.Request.Path.ToString().Contains("/Statistics"))
                     {
                         @:id="currentPage" 
                     }>
                    <div class="page-link-container">
                        <img width="28px" height="28px" src="~/icons/stat.svg" alt="Тут иконка"/>
                        <p>Статистика</p>
                    </div>
                </div>
            </a>
            <a asp-page="Logs">
                <div class="page-link"
                     @if (Context.Request.Path.ToString().Contains("/Logs"))
                     {
                         @:id="currentPage" 
                     }>
                    <div class="page-link-container">
                        <img width="28px" height="28px" src="~/icons/log.svg" alt="Тут иконка"/>
                        <p>Просмотр логов</p>
                    </div>
                </div>
            </a>
            <a asp-page="Database">
                <div class="page-link"
                     @if (Context.Request.Path.ToString().Contains("/Database"))
                     {
                         @:id="currentPage" 
                     }>
                    <div class="page-link-container">
                        <img width="28px" height="28px" src="~/icons/database.svg" alt="Тут иконка"/>
                        <p>База данных</p>
                    </div>
                </div>
            </a>
        </div>
        <div id="bottom-nav">
            <div class="page-link">
                <a class asp-page="Login" asp-page-handler="Logout">
                    <div class="page-link-container">
                        <img width="28px" height="28px" src="~/icons/logout.svg" alt="Тут иконка"/>
                        <p>Выход</p>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>
<div id="content">
    @RenderBody()
</div>
</body>
</html>